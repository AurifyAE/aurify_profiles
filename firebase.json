{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/:page",
        "destination": "/:page.html"
      },
      {
        "source": "**",
        "destination": "/404.html"
      }
    ]
  }
}